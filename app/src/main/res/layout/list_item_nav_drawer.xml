<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="?attr/listPreferredItemHeightSmall"
             android:layout_marginBottom="@dimen/global_widget_margin"
             android:layout_marginTop="@dimen/global_widget_margin"
             android:background="@android:color/white">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/icon_full_size"
        android:layout_height="@dimen/icon_full_size"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/global_margin"
        android:layout_marginRight="@dimen/global_margin"/>

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="72dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:text="@string/app_name"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"/>

</FrameLayout>